<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_layout_margin">

    <LinearLayout
        android:id="@+id/cardLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pokemonSprite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/card_imageview_margin_top"
            app:srcCompat="@drawable/ic_launcher_foreground"
            android:contentDescription="@string/pokemon_sprite_description" />

        <TextView
            android:id="@+id/pokemonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/card_text_marginStart"
            android:layout_marginTop="@dimen/card_text_marginTop"
            android:layout_marginEnd="@dimen/card_text_marginEnd"
            android:layout_marginBottom="@dimen/card_text_marginBottom"
            android:textColor="@android:color/black"
            android:textSize="@dimen/card_text_size" />

    </LinearLayout>

</androidx.cardview.widget.CardView>